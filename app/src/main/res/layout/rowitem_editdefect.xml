<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtVidDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Вид дефекта" />

    <TextView
        android:id="@+id/txtTypeDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Тип дефекта" />

    <TextView
        android:id="@+id/txtCountDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:text="Количество выявленных дефектов : 0 шт." />

    <TextView
        android:id="@+id/txtDescriptionDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:paddingStart="12dp"
        android:textColor="@color/teal_700"
        android:text="Описание дефекта" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>