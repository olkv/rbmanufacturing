<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <View
        android:id="@+id/dividerSelected"
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="@color/teal_700"
        android:background="?android:attr/listDivider" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTypeDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тип дефекта"
        android:textStyle="bold"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtVidDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="Вид дефекта"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtCountDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="Количество выявленных дефектов : 0 шт."
        android:textSize="16dp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/txtDescriptionDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="Описание дефекта"
        android:textColor="@color/teal_700"
        android:textSize="10dp" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>

</LinearLayout>